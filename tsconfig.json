{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "sourceMap": false,
    "moduleResolution": "Node",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"]
}
